---
import "../styles/global.css";
import NavLayout from "../layouts/NavLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import FooterLayout from "../layouts/FooterLayout.astro";
import ReviewCard from "../components/ReviewCard.astro";
import Reviewitems from "../components/reviewitems.astro";
// import { getCollection } from "astro:content";

// const Reviews = await getCollection("reviews2024");
const Reviews = await Astro.glob("../content/reviews2024/*.md");
---
<MainLayout name="body" title="2024 reads and watches" />
	<body>
		<div id="container">
			<div id="nav-box" class="section-box cont1">
				<NavLayout />
            </div>
			<div id="review-container">
				{
					Reviews.map((review) =>
						<ReviewCard review={review}/>
					)
					}
			</div>
			<FooterLayout credittxt="bg image from sadgrl.online" creditlink="https://sadgrl.online/webmastery/downloads/tiledbgs"/>
		</div>
	</body>
<style>
	body {
		background-image: url('/images/indexbg.jpg');
	}
	#container{
        margin-top: 4em;
		justify-content: center;
		grid-template-areas: "nav" "main" "footer";
		min-width: fit-content;
	}
	#nav-box{
		margin-bottom: 1.5rem;
	}
	#review-container{
		display:grid;
		grid-gap: 2rem;
		grid-template-columns: repeat(2, 1fr);
	}
	.cont1{
        height: fit-content;
        padding-bottom: 2em;
		grid-area: nav;
	}
	.cont2{
		grid-area: main;
	}
	@media screen and (max-width: 740px) {
    	#container {
		margin-left: 0.5em;
		margin-right: 0.5em;
		display: grid;
		grid-template-areas: "nav" "main" "footer";
		grid-gap: 1rem;
		max-width: 100%;
	}
	}
</style>